<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camera + audio permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Keep CPU at full clock speed during high-speed (120-240 fps) recording -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required only on API 28 and below to write to the public Movies directory -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Device must have a camera -->
    <uses-feature android:name="android.hardware.camera.any" android:required="true" />
    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:theme="@style/Theme.HighSpeedCamera">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.HighSpeedCamera.Splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>
